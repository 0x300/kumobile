<!-- Course Page -->
<div data-role="page" class="student-needs-removed" id="{{bbId}}-{{contentId}}-page">

    <!-- Header -->
    <div class="header blue-grad" data-role="header">	
        
        <!-- Loading Indicator -->	
        <img src="img/loading.gif" class="loading-indicator ui-btn-right" />
            
        <!-- Title -->
        <div class="header-title">{{name}}</div>
        
        <!-- Back button -->
        <a class="back-button blue-button-grad" data-corners="true" data-theme="b" data-icon="back" data-role="button" data-rel="back" >Back</a>
    </div>
    
    <!-- Hidden -->
    <div class="bbId" style="display:none">{{bbId}}</div>
    <div class="contentId" style="display:none">{{contentId}}</div>
    
    <!-- Scroller -->
    <div id="{{bbId}}-{{contentId}}-scroller" class="scroller">
    
        <!-- List -->
        <ul style="display:none" id="{{bbId}}-{{contentId}}-list" data-role="listview">
            
        </ul>
    </div>
</div>